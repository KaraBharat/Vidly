@model Vidly.ViewModels.MovieViewModels

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Movies </h2>

@if (@Model.Movies.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
                <th scope="col">Stock</th>
                <th scope="col">Available</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in @Model.Movies)
            {
                <tr>
                    <td> @Html.ActionLink(movie.Name, "details", new { Id = movie.Id }) </td>
                    <td>@movie.Genre.Name</td>
                    <td>@movie.NumberInStock</td>
                    <td>@movie.NumberAvailable</td>
                    <td>@Html.ActionLink("Edit", "Edit", new { Id = movie.Id })</td>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Add New", "New")
}
else
{
    <p>Currently don't have any movies</p>
}